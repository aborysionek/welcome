<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_hobbies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:theme="@style/AppTheme.NoActionBar"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.sda.android.applicationcv.Hobbies"
    tools:showIn="@layout/activity_hobbies"
    android:background="@raw/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="@color/icons"
        android:textStyle="bold"
        android:text="@string/hobbies"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/hobbies_1"
        android:layout_marginLeft="50sp"
        app:srcCompat="@drawable/ic_hobbies_computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"/>
    <ImageView
        android:id="@+id/hobbies_3"
        android:layout_marginLeft="50sp"
        app:srcCompat="@drawable/ic_hobbies_travel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hobbies_1"/>
    <ImageView
        android:id="@+id/hobbies_5"
        android:layout_marginLeft="50sp"
        app:srcCompat="@drawable/ic_hobbies_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hobbies_3"/>
    <ImageView
        android:id="@+id/hobbies_2"
        app:srcCompat="@drawable/ic_hobbies_movies"
        android:layout_marginTop="50sp"
        android:layout_toRightOf="@id/hobbies_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/hobbies_4"
        android:layout_below="@id/hobbies_1"
        android:layout_toRightOf="@id/hobbies_1"
        app:srcCompat="@drawable/ic_hobbies_multiplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/hobbies_6"
        android:layout_below="@id/hobbies_4"
        android:layout_toRightOf="@id/hobbies_1"
        app:srcCompat="@drawable/ic_hobbies_graphics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
